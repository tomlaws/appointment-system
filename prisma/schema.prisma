generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "esm"
  generatedFileExtension = "ts"
  importFileExtension = "ts"
}

datasource db {
  provider = "postgresql"
}

enum UserStatus {
  ANONYMOUS
  REGISTERED
}

model User {
  id        String   @id @default(uuid())
  status    UserStatus
  email     String   @unique
  password  String?
  firstName String
  lastName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  time      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, time])
}

model TimeSlot {
  id        String   @id @default(uuid())
  time      DateTime @unique
  openings  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OneTimeCode {
  id        String   @id @default(uuid())
  email     String
  code      String   @unique
  used      Boolean  @default(false)
  expiry    DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}