# Environment variables declared in this file are NOT automatically loaded by Prisma.
# Please add `import "dotenv/config";` to your `prisma.config.ts` file, or use the Prisma CLI with Bun
# to load environment variables from .env files: https://pris.ly/prisma-config-env-vars.

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# Database
# Get your connection string from your database provider (e.g., Vercel Postgres, PlanetScale, Railway, etc.)
DATABASE_URL="your-postgresql-connection-string-here"

# Authentication
# Generate a secure random string for Better Auth secret
BETTER_AUTH_SECRET="your-secure-random-secret-here"
BETTER_AUTH_URL="http://localhost:3000"

# Email Service
# Get your API key from https://resend.com
RESEND_API_KEY="your-resend-api-key-here"

# Root Admin Account
# These credentials will be used to create the initial admin account
ROOT_ACCOUNT="admin@example.com"
ROOT_PASSWORD="secure-admin-password"

# Application Settings
# Duration of each time slot in minutes
TIMESLOT_DURATION_MINUTES=30
# Maximum number of bookings per time slot
TIMESLOT_CAPACITY=5

# Timezone Settings
# Server timezone - DO NOT CHANGE (keep as UTC to avoid timezone conversion issues)
TZ="UTC"
# Client-side timezone (IANA timezone identifier, e.g., "America/New_York", "Asia/Hong_Kong")
NEXT_PUBLIC_TZ="Your/Timezone"

# Office Hours
# Business hours in 24-hour format, multiple ranges separated by commas
# Format: "HH:MM-HH:MM,HH:MM-HH:MM"
OFFICE_HOURS="09:00-12:30,14:00-18:00"